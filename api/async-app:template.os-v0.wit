interface async-app {
    variant request {
        send(send-request),
        /// history of async-app with given node
        history(string),
    }

    variant response {
        send,
        history(list<async-app-message>),
    }

    record send-request {
        target: string,
        message: string,
    }

    record async-app-message {
        author: string,
        content: string,
    }
}

world async-app-template-dot-os-v0 {
    import async-app;
    include process-v1;
}
